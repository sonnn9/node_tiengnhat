<% var total = data.json.word.length; %>
<% var arr_read = [];
var arr_number = [];
var k=0;
var h=0;
data.json.read.forEach(function (read) {
    read.forEach(function (re) {
        arr_read[k] = re;
        k++;
    })
});
data.json.number.forEach(function (number) {
    number.forEach(function (nu) {
        arr_number[h] = nu;
        h++;
    })
});
arr_read = jp.shuffle_arr(arr_read);
arr_number = jp.shuffle_arr(arr_number);

%>
<div class="mina_type exercise ex1" type="ex1">
    <div class="homework" ex="ex1">
        <p class="title"><%= data.json.title %></p>
        <div class="ans_choose" style="margin-bottom: 20px;">
            <%arr_read.forEach(function (re) { %>
                <a class="label label-success label_txt_click"><%=re%></a>
            <% })%>
            <%arr_number.forEach(function (nu) { %>
                <a class="label label-success label_txt_click"><%=nu%></a>
            <% })%>

        </div>
        <div class="homework_content">
            <table class="ex1_tb">
                <tbody>
                <tr>
                    <% data.json.col.forEach(function (col) { %>
                    <th><%= col %></th>
                    <% }) %>
                </tr>
                <% for (var i = 0;i < total;i++) { %>
                <tr>
                    <td><span class="ex1_word"><%= data.json.word[i] %></span></td>

                    <td><input type="text" class="ex1_read ex1_input_text" placeholder="?"><span
                                class="ex_true_false glyphicon"></span></td>
                    <td><input type="text" class="ex1_number ex1_input_text" placeholder="?"><span
                                class="ex_true_false glyphicon"></span></td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
        <div class="homework_notification"></div>
